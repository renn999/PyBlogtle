#!/usr/bin/env python

import sys
sys.path.insert(0, './')  
from git import *

try:
  from blogtle import app as app
  none_init = False
except:
  none_init = True

def run_help():
  pass

if __name__ == '__main__':
  if len(sys.argv) > 1:
    if not none_init:
      if sys.argv[1] == "build":
        from blogtle import freezer as freezer
        freezer.freeze()
      else:
        app.run()
    else:
      if sys.argv[1] == "init":
        pass
      else:
        print 'plz init.'
  else:
    run_help()
